# Use Node.js to build and run the Angular app
FROM node:14-alpine

# Set the working directory
WORKDIR /app

# Copy package.json and package-lock.json
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the entire Angular project source
COPY . .

# Expose the port the Angular dev server will run on
EXPOSE 4200

# Command to run the Angular development server
CMD ["npm", "start"]
